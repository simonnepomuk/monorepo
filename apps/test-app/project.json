{
  "name": "test-app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "root": "apps/test-app",
  "sourceRoot": "apps/test-app/src",
  "projectType": "application",
  "implicitDependencies": ["sveltekit-adapter-firebase"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{options.outputPath}"],
      "options": {
        "commands": ["vite build"],
        "cwd": "apps/test-app"
      },
      "dependsOn": ["^build"]
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["firebase serve"]
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vite",
        "cwd": "apps/test-app"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/test-app/**/*.ts"]
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --plugin-search-dir . --write .",
        "cwd": "apps/test-app"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "playwright test",
            "forwardAllArgs": false
          }
        ],
        "cwd": "apps/test-app"
      },
      "dependsOn": ["build"]
    },
    "check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "cwd": "apps/test-app"
      }
    }
  },
  "tags": []
}
